<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="900px"
    android:layout_height="1400px"
    android:layout_gravity="center"
    android:background="@drawable/whiteportbg"

    >


    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/textView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="32dp"
            android:text="Add Portfolio"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="20sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <EditText
            android:id="@+id/editTitle"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:background="@android:drawable/editbox_background"
            android:hint="Portfolio Name"
            android:textColorHint="@color/colorPrimaryDark"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView3" />

        <EditText
            android:id="@+id/editDesc"
            android:layout_width="300dp"
            android:layout_height="90dp"
            android:layout_marginTop="16dp"
            android:background="@android:drawable/editbox_background"
            android:hint="Details"
            android:textColorHint="@color/colorPrimaryDark"
            app:layout_constraintEnd_toEndOf="@+id/editTitle"
            app:layout_constraintHorizontal_bias="0.488"
            app:layout_constraintStart_toStartOf="@+id/editTitle"
            app:layout_constraintTop_toBottomOf="@+id/editTitle" />

        <ImageButton
            android:id="@+id/add1"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_marginStart="16dp"
            android:background="@drawable/addport"
            android:scaleType="fitXY"
            app:layout_constraintStart_toStartOf="@+id/editDesc"
            app:layout_constraintTop_toTopOf="@+id/add2"
            app:srcCompat="@drawable/addport" />

        <ImageButton
            android:id="@+id/imageButton3"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_marginTop="8dp"
            android:background="@drawable/lockport"
            android:scaleType="fitXY"
            app:layout_constraintStart_toStartOf="@+id/add1"
            app:layout_constraintTop_toBottomOf="@+id/add1"
            app:srcCompat="@drawable/lockport" />

        <ImageButton
            android:id="@+id/imageButton4"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_marginTop="8dp"
            android:background="@drawable/lockport"
            android:scaleType="fitXY"
            app:layout_constraintEnd_toEndOf="@+id/add2"
            app:layout_constraintTop_toBottomOf="@+id/add2"
            app:srcCompat="@drawable/lockport" />

        <ImageButton
            android:id="@+id/add2"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="8dp"
            android:background="@drawable/addport"
            android:scaleType="fitXY"
            app:layout_constraintEnd_toEndOf="@+id/editDesc"
            app:layout_constraintTop_toBottomOf="@+id/editDesc"
            app:srcCompat="@drawable/addport" />

        <ImageButton
            android:id="@+id/ok_button"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:layout_marginStart="48dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="36dp"
            android:background="@drawable/ok_button"
            android:scaleType="fitXY"
            app:layout_constraintEnd_toEndOf="@+id/imageButton4"
            app:layout_constraintStart_toStartOf="@+id/imageButton3"
            app:layout_constraintTop_toBottomOf="@+id/imageButton3"
            app:srcCompat="@drawable/ok_button" />

        <ImageButton
            android:id="@+id/closeButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/ic_close_black_24dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/ic_close_black_24dp" />

        <ImageView
            android:id="@+id/add1img"
            android:layout_width="120dp"
            android:layout_height="120dp"
            app:layout_constraintStart_toStartOf="@+id/add1"
            app:layout_constraintTop_toTopOf="@+id/add1"
            app:srcCompat="@drawable/addport" />

        <ImageView
            android:id="@+id/add2img"
            android:layout_width="120dp"
            android:layout_height="120dp"
            app:layout_constraintBottom_toBottomOf="@+id/add2"
            app:layout_constraintStart_toStartOf="@+id/add2"
            app:layout_constraintTop_toTopOf="@+id/add2"
            app:srcCompat="@drawable/addport" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</LinearLayout>